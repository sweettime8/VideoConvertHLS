    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            
            <!-- Build only package selected -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.0</version>
                
                <executions>
                    <execution>
                        <id>gw-message</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>                        
                        <configuration>
                            <includes>
                                <include>com/elcom/gateway/message/**</include>
                            </includes>
                            <outputDirectory>${project.build.directory}/gw-message</outputDirectory>
                            <classifier>gw-message</classifier>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
